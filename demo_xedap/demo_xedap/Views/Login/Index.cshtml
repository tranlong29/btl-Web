@model demo_xedap.Models.tCustumer
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<h3>Log in to enter</h3>
@using (Html.BeginForm("DangNhap", "login", FormMethod.Post))
{
    <form class="row login_form" action="contact_process.php" method="post" id="contactForm" novalidate="novalidate">
        <div class="col-md-12 form-group">
            <label for="uname"><b>Username</b></label>
            @Html.EditorFor(Model => Model.TaiKhoan, new { htmlAtributes = new { @class = "form-control" } })
        </div>
        <div class="col-md-12 form-group">
            <label for="psw"><b>Password</b></label>
            @Html.EditorFor(model => model.MatKhau, new { htmlAtribute = new { @class = "forn-control"} })
        </div>
        <div class="col-md-12 form-group">
            <div class="creat_account">
                <input type="checkbox" id="f-option2" name="selector">
                <label for="f-option2">Keep me logged in</label>
                <a href="#">Forgot Password ?</a>
            </div>
        </div>
        <div class="col-md-12 form-group">
            <button type="submit" value="submit" class="genric-btn primary circle">Log In</button>&nbsp;&nbsp;
            
            <button type="submit" value="submit" class="genric-btn primary-border circle">@Html.ActionLink("Register", "Dangky")</button>
            
        </div>
    </form>
}
